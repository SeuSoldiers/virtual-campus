<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1"
      fx:controller="seu.virtualcampus.ui.shop.order.OrderListController"
      style="-fx-font-family: 'Microsoft YaHei'; -fx-background-color: linear-gradient(to bottom, #a1c4fd, #d0e1ff);">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <!-- 页面标题 -->
    <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="我的订单"/>

    <!-- 筛选条件 + 返回 -->
    <HBox spacing="10.0" alignment="CENTER_LEFT">
        <Button fx:id="backButton" text="返回"/>
        <Label text="订单状态:"/>
        <ChoiceBox fx:id="statusChoiceBox" prefWidth="120.0"/>
        <Button fx:id="searchButton" text="查询"/>
        <Button fx:id="refreshButton" text="刷新"/>
    </HBox>

    <Separator/>

    <!-- 订单列表 -->
    <TableView fx:id="ordersTable" prefHeight="400.0">
        <columns>
            <TableColumn fx:id="orderIdColumn" prefWidth="100.0" text="订单号"/>
            <TableColumn fx:id="statusColumn" prefWidth="100.0" text="状态"/>
            <TableColumn fx:id="totalAmountColumn" prefWidth="100.0" text="总金额"/>
            <TableColumn fx:id="createTimeColumn" prefWidth="150.0" text="创建时间"/>
            <TableColumn fx:id="actionColumn" prefWidth="200.0" text="操作"/>
        </columns>
    </TableView>

    <!-- 分页控件 -->
    <HBox spacing="10.0" alignment="CENTER">
        <Button fx:id="prevPageButton" text="上一页"/>
        <Label fx:id="pageInfoLabel" text="第 1 页 / 共 1 页"/>
        <Button fx:id="nextPageButton" text="下一页"/>
    </HBox>
</VBox>
