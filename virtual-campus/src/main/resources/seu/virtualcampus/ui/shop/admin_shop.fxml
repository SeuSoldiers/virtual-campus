<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" spacing="30.0" alignment="CENTER" xmlns="http://javafx.com/javafx/11.0.1"
      fx:controller="seu.virtualcampus.ui.shop.admin.AdminShipController"
      style="-fx-font-family: 'Microsoft YaHei'; -fx-background-color: linear-gradient(to bottom, #a1c4fd, #d0e1ff);">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
    </padding>

    <!-- 页面标题 -->
    <Label text="订单发货管理" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <!-- 发货区域（订单列表） -->
    <VBox spacing="16" alignment="CENTER" prefWidth="920"
          style="-fx-background-color: #ffffff; -fx-background-radius: 15; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 15, 0, 0, 3);">

        <Label text="订单列表（选择后发货）" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>

        <!-- 工具栏 -->
        <ToolBar style="-fx-background-color: transparent;">
            <Button text="刷新" onAction="#handleRefresh" style="-fx-background-color: #6aa8ff; -fx-text-fill: white; -fx-background-radius: 6;"/>
            <Separator/>
            <Button fx:id="shipButton" text="发货所选" onAction="#handleShip" disable="true"
                    style="-fx-background-color: #4f8cff; -fx-text-fill: white; -fx-background-radius: 6; -fx-font-weight: bold;"/>
        </ToolBar>

        <!-- 订单表格 -->
        <TableView fx:id="ordersTable" prefHeight="420" prefWidth="900">
            <columns>
                <TableColumn fx:id="orderIdCol" text="订单号" prefWidth="260"/>
                <TableColumn fx:id="userIdCol" text="用户" prefWidth="160"/>
                <TableColumn fx:id="statusCol" text="状态" prefWidth="120"/>
                <TableColumn fx:id="amountCol" text="金额" prefWidth="140"/>
                <TableColumn fx:id="timeCol" text="下单时间" prefWidth="220"/>
            </columns>
        </TableView>

        <!-- 结果显示 -->
        <Label fx:id="resultLabel" style="-fx-font-size: 16px; -fx-padding: 8 0; -fx-min-height: 28;"/>

        <!-- 操作说明 -->
        <VBox spacing="8" alignment="CENTER"
              style="-fx-background-color: #ecf0f1; -fx-background-radius: 8; -fx-padding: 12;">
            <Label text="操作说明:" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #7f8c8d;"/>
            <Label text="• 选择需要发货的订单，然后点击‘发货所选’" style="-fx-font-size: 13px; -fx-text-fill: #7f8c8d;"/>
            <Label text="• 只有状态为 PAID（已支付）的订单才能发货" style="-fx-font-size: 13px; -fx-text-fill: #7f8c8d;"/>
        </VBox>
    </VBox>

    <!-- 返回按钮 -->
    <Button text="返回管理页面" onAction="#handleBack" prefWidth="150" prefHeight="35"
            style="-fx-font-size: 14px; -fx-background-color: #6aa8ff; -fx-text-fill: white; -fx-background-radius: 6;"/>

    <!-- 当前用户信息 -->
    <Label fx:id="currentUserLabel" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d; -fx-font-style: italic;"/>

</VBox>
