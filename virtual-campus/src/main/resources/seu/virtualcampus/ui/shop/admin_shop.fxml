<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" spacing="30.0" alignment="CENTER" xmlns="http://javafx.com/javafx/11.0.1"
      fx:controller="seu.virtualcampus.ui.shop.admin.AdminShipController"
      style="-fx-font-family: 'Microsoft YaHei'; -fx-background-color: linear-gradient(to bottom, #a1c4fd, #d0e1ff);">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
    </padding>

    <!-- 页面标题 -->
    <Label text="订单发货管理" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <!-- 发货区域 -->
    <VBox spacing="25" alignment="CENTER" prefWidth="500"
          style="-fx-background-color: #ffffff; -fx-background-radius: 15; -fx-padding: 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 15, 0, 0, 3);">

        <Label text="订单发货" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>

        <!-- 订单号输入 -->
        <VBox spacing="10" alignment="CENTER_LEFT">
            <Label text="订单号:" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <TextField fx:id="orderIdField" promptText="请输入订单号" prefWidth="400" prefHeight="40"
                       style="-fx-font-size: 16px; -fx-background-radius: 8; -fx-padding: 10; -fx-border-color: #bdc3c7; -fx-border-radius: 8;"/>
        </VBox>

        <!-- 发货按钮 -->
        <Button fx:id="shipButton" text="发货" onAction="#handleShip" prefWidth="200" prefHeight="45"
                style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-background-color: #4f8cff; -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand;"/>

        <!-- 结果显示 -->
        <Label fx:id="resultLabel" style="-fx-font-size: 16px; -fx-padding: 15 0; -fx-min-height: 40;"/>

        <!-- 操作说明 -->
        <VBox spacing="8" alignment="CENTER"
              style="-fx-background-color: #ecf0f1; -fx-background-radius: 8; -fx-padding: 20;">
            <Label text="操作说明:" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #7f8c8d;"/>
            <Label text="• 请输入需要发货的订单号" style="-fx-font-size: 13px; -fx-text-fill: #7f8c8d;"/>
            <Label text="• 只有已支付的订单才能发货" style="-fx-font-size: 13px; -fx-text-fill: #7f8c8d;"/>
            <Label text="• 发货后订单状态将变为已发货" style="-fx-font-size: 13px; -fx-text-fill: #7f8c8d;"/>
        </VBox>
    </VBox>

    <!-- 返回按钮 -->
    <Button text="返回管理页面" onAction="#handleBack" prefWidth="150" prefHeight="35"
            style="-fx-font-size: 14px; -fx-background-color: #6aa8ff; -fx-text-fill: white; -fx-background-radius: 6;"/>

    <!-- 当前用户信息 -->
    <Label fx:id="currentUserLabel" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d; -fx-font-style: italic;"/>

</VBox>
