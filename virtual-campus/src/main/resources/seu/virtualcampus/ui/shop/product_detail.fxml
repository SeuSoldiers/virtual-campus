<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml" spacing="32" alignment="CENTER"
      fx:controller="seu.virtualcampus.ui.shop.product.ProductDetailController"
      style="-fx-font-family: 'Microsoft YaHei'; -fx-background-color: linear-gradient(to bottom, #a1c4fd, #d0e1ff); -fx-padding: 48 64; -fx-background-radius: 18; -fx-effect: dropshadow(gaussian, #8fb2ff, 16, 0.2, 0, 4);">

    <!-- 返回按钮 -->
    <HBox alignment="TOP_LEFT" spacing="16" style="-fx-padding: 0 0 0 0;">
        <Button text="返回列表" onAction="#handleBackToList"
                style="-fx-font-size: 16px; -fx-background-radius: 8; -fx-padding: 4 18; -fx-background-color: #b0b8c1; -fx-text-fill: #2d3a4a;"/>
    </HBox>

    <!-- 商品详情卡片 -->
    <VBox spacing="24" alignment="CENTER" maxWidth="600"
          style="-fx-background-color: #fff; -fx-background-radius: 12; -fx-padding: 32; -fx-effect: dropshadow(gaussian, #e0e7ef, 8, 0.1, 0, 2);">

        <!-- 标题 -->
        <Label text="商品详情"
               style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2d3a4a; -fx-padding: 0 0 16 0;"/>

        <!-- 商品信息 -->
        <GridPane hgap="20" vgap="16" alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints minWidth="100" prefWidth="120"/>
                <ColumnConstraints minWidth="200" prefWidth="300"/>
            </columnConstraints>

            <!-- 商品ID -->
            <Label text="商品ID：" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2d3a4a;"
                   GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <Label fx:id="productIdLabel" style="-fx-font-size: 16px; -fx-text-fill: #666;"
                   GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <!-- 商品名称 -->
            <Label text="商品名称：" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2d3a4a;"
                   GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <Label fx:id="productNameLabel" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2d3a4a;"
                   GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <!-- 商品价格 -->
            <Label text="价格：" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2d3a4a;"
                   GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <Label fx:id="priceLabel" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #ff6b35;"
                   GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <!-- 库存数量 -->
            <Label text="库存：" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2d3a4a;"
                   GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <Label fx:id="stockLabel" style="-fx-font-size: 16px; -fx-text-fill: #666;"
                   GridPane.columnIndex="1" GridPane.rowIndex="3"/>

            <!-- 商品类型 -->
            <Label text="类型：" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2d3a4a;"
                   GridPane.columnIndex="0" GridPane.rowIndex="4"/>
            <Label fx:id="typeLabel" style="-fx-font-size: 16px; -fx-text-fill: #666;"
                   GridPane.columnIndex="1" GridPane.rowIndex="4"/>

            <!-- 商品状态 -->
            <Label text="状态：" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2d3a4a;"
                   GridPane.columnIndex="0" GridPane.rowIndex="5"/>
            <Label fx:id="statusLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;"
                   GridPane.columnIndex="1" GridPane.rowIndex="5"/>
        </GridPane>

        <!-- 分隔线 -->
        <Separator style="-fx-background-color: #e0e7ef;"/>

        <!-- 购买区域 -->
        <VBox spacing="16" alignment="CENTER" fx:id="purchaseArea">
            <!-- 数量选择 -->
            <HBox spacing="16" alignment="CENTER">
                <Label text="购买数量：" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2d3a4a;"/>
                <Spinner fx:id="quantitySpinner" prefWidth="100" editable="true"
                         style="-fx-font-size: 16px;"/>
            </HBox>

            <!-- 操作按钮 -->
            <HBox spacing="20" alignment="CENTER" style="-fx-padding: 16 0 0 0;">
                <Button fx:id="addToCartButton" text="加入购物车" onAction="#handleAddToCart" prefWidth="150"
                        style="-fx-font-size: 18px; -fx-background-radius: 8; -fx-padding: 10 24; -fx-background-color: #4f8cff; -fx-text-fill: white;"/>
                <Button text="查看购物车" onAction="#handleViewCart" prefWidth="150"
                        style="-fx-font-size: 18px; -fx-background-radius: 8; -fx-padding: 10 24; -fx-background-color: #6aa8ff; -fx-text-fill: white;"/>
            </HBox>
        </VBox>

        <!-- 状态消息 -->
        <Label fx:id="msgLabel" style="-fx-font-size: 14px; -fx-padding: 8 0 0 0;"/>
    </VBox>

</VBox>
