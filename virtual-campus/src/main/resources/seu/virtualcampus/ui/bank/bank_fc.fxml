            <font>
                <Font name="System Bold" size="24.0"/>
            </font>
        </Label>
        <Button fx:id="ftocbtn" layoutX="216.0" layoutY="188.0" mnemonicParsing="false" onAction="#fc_ftoc"
                prefHeight="49.0" prefWidth="167.0" text="定期转活期" textFill="#000dff">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Button>
        <Button fx:id="ctofbtn" layoutX="216.0" layoutY="276.0" mnemonicParsing="false" onAction="#fc_ctof"
                prefHeight="49.0" prefWidth="167.0" text="活期转定期" textFill="#000dff">
            <font>
                <Font name="System Bold Italic" size="14.0"/>
            </font>
        </Button>
    </children>
</AnchorPane>
