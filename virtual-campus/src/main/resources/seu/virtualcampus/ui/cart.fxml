<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml" spacing="24" alignment="CENTER"
      fx:controller="seu.virtualcampus.ui.cart.CartViewController"
      style="-fx-font-family: 'Microsoft YaHei'; -fx-background-color: linear-gradient(to bottom, #a1c4fd, #d0e1ff); -fx-padding: 48 64; -fx-background-radius: 18; -fx-effect: dropshadow(gaussian, #8fb2ff, 16, 0.2, 0, 4);">
    
    <!-- 返回按钮 -->
    <HBox alignment="TOP_LEFT" spacing="16" style="-fx-padding: 0 0 0 0;">
        <Button text="返回" onAction="#handleBack"
                style="-fx-font-size: 16px; -fx-background-radius: 8; -fx-padding: 4 18; -fx-background-color: #b0b8c1; -fx-text-fill: #2d3a4a;"/>
    </HBox>

    <!-- 标题 -->
    <Label text="购物车"
           style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2d3a4a; -fx-padding: 0 0 16 0;"/>

    <!-- 购物车表格 -->
    <VBox spacing="16" alignment="CENTER" maxWidth="900"
          style="-fx-background-color: #fff; -fx-background-radius: 12; -fx-padding: 24; -fx-effect: dropshadow(gaussian, #e0e7ef, 8, 0.1, 0, 2);">
        
        <TableView fx:id="cartTable" prefHeight="400" prefWidth="850" style="-fx-font-size: 15px;">
            <columns>
                <TableColumn fx:id="nameCol" text="商品名称" prefWidth="200"/>
                <TableColumn fx:id="priceCol" text="单价" prefWidth="100"/>
                <TableColumn fx:id="quantityCol" text="数量" prefWidth="120"/>
                <TableColumn fx:id="subtotalCol" text="小计" prefWidth="100"/>
                <TableColumn fx:id="typeCol" text="类型" prefWidth="100"/>
                <TableColumn fx:id="statusCol" text="状态" prefWidth="80"/>
                <TableColumn fx:id="actionCol" text="操作" prefWidth="150"/>
            </columns>
        </TableView>

        <!-- 购物车为空提示 -->
        <VBox fx:id="emptyCartHint" spacing="16" alignment="CENTER" visible="false">
            <Label text="购物车还是空的~" style="-fx-font-size: 18px; -fx-text-fill: #666;"/>
            <Button text="去逛逛" onAction="#handleGoShopping"
                    style="-fx-font-size: 16px; -fx-background-radius: 8; -fx-padding: 8 24; -fx-background-color: #4f8cff; -fx-text-fill: white;"/>
        </VBox>

        <!-- 底部操作区域 -->
        <HBox fx:id="bottomArea" spacing="20" alignment="CENTER_RIGHT" style="-fx-padding: 16 0 0 0;">
            <!-- 左侧操作 -->
            <HBox spacing="12" alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                <Button text="清空购物车" onAction="#handleClearCart"
                        style="-fx-font-size: 14px; -fx-background-radius: 8; -fx-padding: 6 16; -fx-background-color: #ff4f4f; -fx-text-fill: white;"/>
                <Button text="刷新" onAction="#handleRefresh"
                        style="-fx-font-size: 14px; -fx-background-radius: 8; -fx-padding: 6 16; -fx-background-color: #b0b8c1; -fx-text-fill: #2d3a4a;"/>
            </HBox>
            
            <!-- 右侧合计和结算 -->
            <HBox spacing="16" alignment="CENTER_RIGHT">
                <Label text="合计：" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2d3a4a;"/>
                <Label fx:id="totalAmountLabel" text="¥0.00" 
                       style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #ff6b35;"/>
                <Button fx:id="checkoutButton" text="去结算" onAction="#handleCheckout" prefWidth="120"
                        style="-fx-font-size: 18px; -fx-background-radius: 8; -fx-padding: 10 24; -fx-background-color: #4f8cff; -fx-text-fill: white;"/>
            </HBox>
        </HBox>

    </VBox>

    <!-- 状态消息 -->
    <Label fx:id="msgLabel" style="-fx-font-size: 14px; -fx-padding: 8 0 0 0;"/>

</VBox>
