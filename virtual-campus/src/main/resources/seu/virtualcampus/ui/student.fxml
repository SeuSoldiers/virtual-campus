<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml" spacing="24" alignment="CENTER"
      fx:controller="seu.virtualcampus.ui.StudentController"
      style="-fx-font-family: 'Microsoft YaHei'; -fx-background-color: linear-gradient(to bottom, #f8fafc, #e0e7ef); -fx-padding: 48 64; -fx-background-radius: 18; -fx-effect: dropshadow(gaussian, #b0b8c1, 16, 0.2, 0, 4);">
    <Label text="学生信息"
           style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2d3a4a; -fx-padding: 0 0 16 0;"/>
    <TextField fx:id="nameField" promptText="姓名"
               style="-fx-font-size: 18px; -fx-pref-width: 260; -fx-background-radius: 8; -fx-padding: 8;"/>
    <TextField fx:id="majorField" promptText="专业"
               style="-fx-font-size: 18px; -fx-pref-width: 260; -fx-background-radius: 8; -fx-padding: 8;"/>
    <TextField fx:id="addressField" promptText="地址"
               style="-fx-font-size: 18px; -fx-pref-width: 260; -fx-background-radius: 8; -fx-padding: 8;"/>
    <TextField fx:id="phoneField" promptText="电话"
               style="-fx-font-size: 18px; -fx-pref-width: 260; -fx-background-radius: 8; -fx-padding: 8;"/>
    <Button text="提交修改" onAction="#handleSubmit"
            style="-fx-font-size: 18px; -fx-background-radius: 8; -fx-padding: 8 32; -fx-background-color: #4f8cff; -fx-text-fill: white;"/>
    <Label fx:id="msgLabel" textFill="green" style="-fx-font-size: 14px; -fx-padding: 8 0 0 0;"/>
</VBox>