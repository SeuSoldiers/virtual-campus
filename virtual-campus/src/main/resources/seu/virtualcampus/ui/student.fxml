<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<HBox xmlns:fx="http://javafx.com/fxml" spacing="32" alignment="CENTER"
      fx:controller="seu.virtualcampus.ui.StudentController"
      style="-fx-font-family: 'Microsoft YaHei'; -fx-background-color: linear-gradient(to bottom, #f8fafc, #e0e7ef); -fx-padding: 48 64; -fx-background-radius: 18; -fx-effect: dropshadow(gaussian, #b0b8c1, 16, 0.2, 0, 4);">
    <!-- 左侧：个人信息 -->
    <VBox spacing="18" alignment="TOP_CENTER" HBox.hgrow="ALWAYS"
          style="-fx-background-color: #fff; -fx-background-radius: 12; -fx-padding: 32 24; -fx-effect: dropshadow(gaussian, #e0e7ef, 8, 0.1, 0, 2);">
        <Label text="学生信息"
               style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2d3a4a; -fx-padding: 0 0 16 0;"/>
        <TextField fx:id="nameField" promptText="姓名" editable="false"
                   style="-fx-font-size: 18px; -fx-pref-width: 260; -fx-background-radius: 8; -fx-padding: 8;"/>
        <TextField fx:id="majorField" promptText="专业" editable="false"
                   style="-fx-font-size: 18px; -fx-pref-width: 260; -fx-background-radius: 8; -fx-padding: 8;"/>
        <TextField fx:id="addressField" promptText="地址" editable="false"
                   style="-fx-font-size: 18px; -fx-pref-width: 260; -fx-background-radius: 8; -fx-padding: 8;"/>
        <TextField fx:id="phoneField" promptText="电话" editable="false"
                   style="-fx-font-size: 18px; -fx-pref-width: 260; -fx-background-radius: 8; -fx-padding: 8;"/>
        <HBox spacing="12" alignment="CENTER_LEFT" style="-fx-padding: 16 0 0 0;">
            <Button fx:id="editBtn" text="修改" onAction="#handleEdit"
                    style="-fx-font-size: 16px; -fx-background-radius: 8; -fx-padding: 6 24; -fx-background-color: #4f8cff; -fx-text-fill: white;"/>
            <Button fx:id="saveBtn" text="保存" onAction="#handleSave" visible="false"
                    style="-fx-font-size: 16px; -fx-background-radius: 8; -fx-padding: 6 24; -fx-background-color: #43b244; -fx-text-fill: white;"/>
            <Button fx:id="cancelBtn" text="取消" onAction="#handleCancel" visible="false"
                    style="-fx-font-size: 16px; -fx-background-radius: 8; -fx-padding: 6 24; -fx-background-color: #b0b8c1; -fx-text-fill: #2d3a4a;"/>
        </HBox>
        <Label fx:id="msgLabel" textFill="green" style="-fx-font-size: 14px; -fx-padding: 8 0 0 0;"/>
    </VBox>
    <!-- 右侧：审核记录 -->
    <VBox spacing="16" alignment="TOP_CENTER" HBox.hgrow="ALWAYS"
          style="-fx-background-color: #fff; -fx-background-radius: 12; -fx-padding: 32 24; -fx-effect: dropshadow(gaussian, #e0e7ef, 8, 0.1, 0, 2);">
        <Label text="信息修改审核记录"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2d3a4a; -fx-padding: 0 0 12 0;"/>
        <TableView fx:id="auditTable" prefWidth="420" style="-fx-font-size: 15px;">
            <columns>
                <TableColumn fx:id="contentCol" text="修改内容" prefWidth="160"/>
                <TableColumn fx:id="timeCol" text="提交时间" prefWidth="100"/>
                <TableColumn fx:id="statusCol" text="审核状态" prefWidth="80"/>
                <TableColumn fx:id="remarkCol" text="审核意见" prefWidth="80"/>
            </columns>
        </TableView>
    </VBox>
    <!-- 返回按钮 -->
    <VBox spacing="0" alignment="TOP_LEFT" HBox.hgrow="ALWAYS">
        <Button text="返回" onAction="#handleBack"
                style="-fx-font-size: 16px; -fx-background-radius: 8; -fx-padding: 4 18; -fx-background-color: #b0b8c1; -fx-text-fill: #2d3a4a;"/>
    </VBox>
</HBox>
