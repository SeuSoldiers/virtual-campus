<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="seu.virtualcampus.ui.StudentController" style="-fx-font-family: 'Microsoft YaHei';">
    <Label text="学生信息" />
    <TextField fx:id="nameField" promptText="姓名" />
    <TextField fx:id="majorField" promptText="专业" />
    <TextField fx:id="addressField" promptText="地址" />
    <TextField fx:id="phoneField" promptText="电话" />
    <Button text="提交修改" onAction="#handleSubmit" />
    <Label fx:id="msgLabel" textFill="green" />
</VBox>