<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="seu.virtualcampus.ui.aichat.AiChatController"
            prefWidth="1100" prefHeight="700"
            style="-fx-background-color:linear-gradient(to bottom right,#f8fafc,#e3e9f7);">
    <stylesheets>
        /seu/virtualcampus/ui/aichat/aichat.css
    </stylesheets>
    <left>
        <VBox spacing="16"
              style="-fx-padding: 32; -fx-background-color: #f0f4ff; -fx-background-radius: 18; -fx-effect: dropshadow(gaussian, #b0b8d8, 12, 0.2, 2, 2);">
            <Label text="会话列表" style="-fx-font-weight:bold; -fx-font-size:26;"/>
            <ListView fx:id="sessionListView" styleClass="session-list" prefWidth="220" prefHeight="600"
                      style="-fx-background-radius: 12; -fx-background-color: #f8fafd;"
            >
            </ListView>
            <HBox spacing="6">
                <Button fx:id="backButton" text="返回首页" onAction="#onBack"
                        style="-fx-font-size: 15; -fx-background-radius: 12; -fx-background-color: #8c9fcf; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10;"/>

                <Button fx:id="createSessionBtn" text="新建会话" onAction="#onCreateSession"
                        style="-fx-font-size: 15; -fx-background-radius: 12; -fx-background-color: #4f8cff; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10;"/>
            </HBox>
        </VBox>
    </left>
    <center>
        <VBox spacing="16" style="-fx-padding: 32;">
            <Label fx:id="sessionTitle" text="当前会话"
                   style="-fx-font-size: 24; -fx-font-weight: bold; -fx-padding: 0 0 16 0;"/>
            <ListView fx:id="messageListView" VBox.vgrow="ALWAYS" prefHeight="520"
                      style="-fx-background-radius: 18; -fx-background-color: #f8fafd; -fx-border-color: #e0e7ef; -fx-border-radius: 18;"
            >
            </ListView>
            <HBox spacing="12" style="-fx-padding: 16 0 0 0;">
                <TextField fx:id="inputField" HBox.hgrow="ALWAYS" promptText="请输入消息..." onKeyPressed="#onInputKey"
                           style="-fx-font-size: 15; -fx-background-radius: 12; -fx-background-color: #fff; -fx-border-color: #b0b8d8; -fx-border-radius: 12; -fx-padding: 10;"/>
                <Button fx:id="sendBtn" text="发送" onAction="#onSend"
                        style="-fx-font-size: 15; -fx-background-radius: 12; -fx-background-color: #4f8cff; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 24 10 24;"/>
            </HBox>
        </VBox>
    </center>
    <top>
        <HBox style="-fx-padding: 18; -fx-alignment: center-right;">
            <Label fx:id="userLabel" text="用户："
                   style="-fx-font-size: 16; -fx-text-fill: #4f8cff; -fx-font-weight: bold;"/>
        </HBox>
    </top>
</BorderPane>
