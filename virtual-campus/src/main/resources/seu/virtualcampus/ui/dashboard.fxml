<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8"
      fx:controller="seu.virtualcampus.ui.DashboardController"
      style="-fx-background-image: url('/seu/virtualcampus/ui/background.jpg'); -fx-background-size: cover; -fx-padding: 64;">
    <HBox alignment="CENTER" spacing="16" style="-fx-padding: 24; -fx-background-color: rgba(255, 255, 255, 0.4);">
        <Label fx:id="welcomeLabel" text="欢迎进入虚拟校园系统"
               style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #2d3a4a;"/>
        <Button text="退出登录" onAction="#handleLogout"
                style="-fx-font-size: 20px; -fx-background-radius: 8; -fx-padding: 8 24; -fx-background-color: #ff4f4f; -fx-text-fill: white;"/>
    </HBox>
    <GridPane fx:id="entryBox" hgap="16" vgap="16"
              style="-fx-padding: 32; -fx-background-color: rgba(0, 0, 0, 0.6); -fx-background-radius: 16;">
        <!-- 功能入口按钮将由Controller动态添加 -->
    </GridPane>
</VBox>
