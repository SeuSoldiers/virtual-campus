<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8"
      fx:controller="seu.virtualcampus.ui.DashboardController" spacing="32" alignment="CENTER"
      style="-fx-background-color: linear-gradient(to bottom, #f8fafc, #e0e7ef); -fx-padding: 48 64; -fx-background-radius: 18; -fx-effect: dropshadow(gaussian, #b0b8c1, 16, 0.2, 0, 4);">
    <HBox alignment="TOP_RIGHT" spacing="16" style="-fx-padding: 0 0 0 0;">
        <Button text="退出登录" onAction="#handleLogout"
                style="-fx-font-size: 16px; -fx-background-radius: 8; -fx-padding: 4 18; -fx-background-color: #ff4f4f; -fx-text-fill: white;"/>
    </HBox>
    <Label fx:id="welcomeLabel" text="欢迎进入虚拟校园系统"
           style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2d3a4a; -fx-padding: 0 0 24 0;"/>
    <HBox fx:id="entryBox" spacing="32" alignment="CENTER"
          style="-fx-padding: 24 0 0 0;">
        <!-- 功能入口按钮将由Controller动态添加 -->
    </HBox>
</VBox>
