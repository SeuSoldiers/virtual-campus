<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="420.0" prefWidth="920.0"
            xmlns="http://javafx.com/javafx/21.0.8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="seu.virtualcampus.ui.library.BookListController"
            style="-fx-font-family: 'Microsoft YaHei';
                   -fx-background-color: linear-gradient(to bottom, #e3f2fd, #bbdefb);
                   -fx-padding: 16;
                   -fx-background-radius: 12;
                   -fx-effect: dropshadow(gaussian, #90caf9, 16, 0.25, 0, 4);">

    <children>
        <VBox prefHeight="400.0" prefWidth="900.0" spacing="12">
            <padding>
                <Insets top="12" right="12" bottom="12" left="12"/>
            </padding>
            <children>
                <!-- 标题 -->
                <Label text="📚 搜索结果"
                       style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #0d47a1;"/>

                <!-- 表格 -->
                <TableView fx:id="tableView" VBox.vgrow="ALWAYS"
                           style="-fx-background-color: white;
                                  -fx-background-radius: 10;
                                  -fx-border-color: #e0e7ef;
                                  -fx-border-radius: 10;
                                  -fx-font-size: 14px;
                                  -fx-table-cell-border-color: transparent;
                                  -fx-selection-bar: #90caf9;
                                  -fx-selection-bar-non-focused: #bbdefb;">
                    <columns>
                        <TableColumn fx:id="colIsbn" text="ISBN" prefWidth="140"/>
                        <TableColumn fx:id="colTitle" text="书名" prefWidth="180"/>
                        <TableColumn fx:id="colAuthor" text="作者" prefWidth="140"/>
                        <TableColumn fx:id="colPublisher" text="出版社" prefWidth="140"/>
                        <TableColumn fx:id="colPublishDate" text="出版日期" prefWidth="120"/>
                        <TableColumn fx:id="colCategory" text="类别" prefWidth="100"/>
                        <TableColumn fx:id="colTotalCount" text="总数量" prefWidth="90"/>
                        <TableColumn fx:id="colAvailableCount" text="可借数量" prefWidth="90"/>
                        <TableColumn fx:id="colReservationCount" text="预约数量" prefWidth="90"/>
                    </columns>
                </TableView>

                <!-- 操作按钮 & 状态栏 -->
                <HBox spacing="12" alignment="CENTER_RIGHT">
                    <children>
                        <Button fx:id="btnViewDetails" text="查看详情" onAction="#onViewDetails"
                                style="-fx-background-color: #42a5f5; -fx-text-fill: white;
                                       -fx-background-radius: 8; -fx-padding: 6 20;"/>
                        <Button fx:id="btnBack" text="返回" onAction="#onBack"
                                style="-fx-background-color: #90caf9; -fx-text-fill: white;
                                       -fx-background-radius: 8; -fx-padding: 6 20;"/>
                        <Label fx:id="statusBar" text=""
                               style="-fx-text-fill: #666666; -fx-font-size: 13px;"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
