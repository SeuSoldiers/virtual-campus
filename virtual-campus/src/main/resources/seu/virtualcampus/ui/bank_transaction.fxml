            <Font name="System Bold" size="14.0" />
         </font>
      </Button>
      <Label layoutX="95.0" layoutY="294.0" text="按时间范围筛查：">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <TextField fx:id="starttext" layoutX="160.0" layoutY="324.0" prefHeight="23.0" prefWidth="88.0" />
      <TextField fx:id="endtext" layoutX="302.0" layoutY="324.0" prefHeight="23.0" prefWidth="88.0" />
      <Label layoutX="259.0" layoutY="326.0" text="——">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <Button fx:id="find" layoutX="420.0" layoutY="321.0" mnemonicParsing="false" onAction="#transaction_find" prefHeight="29.0" prefWidth="57.0" text="搜索" textFill="#0004ff">
