            <TableColumn fx:id="typeColumn" prefWidth="75.0" text="交易类型" />
            <TableColumn fx:id="timeColumn" prefWidth="75.0" text="交易时间" />
            <TableColumn fx:id="remarkColumn" prefWidth="75.0" text="备注信息" />
            <TableColumn fx:id="statusColumn" prefWidth="75.0" text="交易状态" />
        </columns>
      </TableView>
      <Button fx:id="backbtn" layoutX="19.0" layoutY="21.0" mnemonicParsing="false" onAction="#transaction_back" prefHeight="29.0" prefWidth="57.0" text="返回">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Button>
      <Button fx:id="refreshbtn" layoutX="94.0" layoutY="21.0" mnemonicParsing="false" onAction="#transaction_refresh" prefHeight="29.0" prefWidth="57.0" text="刷新" textFill="#3e8f35">
