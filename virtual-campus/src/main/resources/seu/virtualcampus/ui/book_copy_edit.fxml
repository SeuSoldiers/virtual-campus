<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="220.0" prefWidth="420.0"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="seu.virtualcampus.ui.BookCopyEditController"
            style="-fx-font-family: 'Microsoft YaHei';
                   -fx-background-color: linear-gradient(to bottom, #e3f2fd, #bbdefb);
                   -fx-padding: 20;
                   -fx-background-radius: 12;
                   -fx-effect: dropshadow(gaussian, #90caf9, 16, 0.2, 0, 4);">

    <children>
        <!-- 表单布局 -->
        <GridPane hgap="12" vgap="14" layoutX="30.0" layoutY="30.0" prefWidth="360.0">
            <columnConstraints>
                <ColumnConstraints prefWidth="120.0"/>
                <ColumnConstraints prefWidth="240.0"/>
            </columnConstraints>

            <!-- 图书编号 -->
            <Label text="图书编号:" GridPane.rowIndex="0" GridPane.columnIndex="0"
                   style="-fx-font-weight: bold; -fx-text-fill: #0d47a1;"/>
            <TextField fx:id="txtBookId" GridPane.rowIndex="0" GridPane.columnIndex="1"
                       style="-fx-background-radius: 8; -fx-border-color: #90caf9;
                              -fx-border-radius: 8; -fx-font-size: 14px;"/>

            <!-- 馆藏位置 -->
            <Label text="馆藏位置:" GridPane.rowIndex="1" GridPane.columnIndex="0"
                   style="-fx-font-weight: bold; -fx-text-fill: #0d47a1;"/>
            <TextField fx:id="txtLocation" GridPane.rowIndex="1" GridPane.columnIndex="1"
                       style="-fx-background-radius: 8; -fx-border-color: #90caf9;
                              -fx-border-radius: 8; -fx-font-size: 14px;"/>
        </GridPane>

        <!-- 按钮栏（靠右下角） -->
        <HBox spacing="20" alignment="CENTER_RIGHT"
              AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0">
            <children>
                <Button fx:id="btnSave" text="保存" onAction="#onSave"
                        style="-fx-background-color: #42a5f5; -fx-text-fill: white;
                               -fx-font-size: 14px; -fx-background-radius: 8; -fx-padding: 6 20;"/>
                <Button fx:id="btnCancel" text="取消" onAction="#onCancel"
                        style="-fx-background-color: #ef5350; -fx-text-fill: white;
                               -fx-font-size: 14px; -fx-background-radius: 8; -fx-padding: 6 20;"/>
            </children>
        </HBox>
    </children>
</AnchorPane>
