<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml" spacing="24" alignment="CENTER"
      fx:controller="seu.virtualcampus.ui.product.ProductListController"
      style="-fx-font-family: 'Microsoft YaHei'; -fx-background-color: linear-gradient(to bottom, #a1c4fd, #d0e1ff); -fx-padding: 48 64; -fx-background-radius: 18; -fx-effect: dropshadow(gaussian, #8fb2ff, 16, 0.2, 0, 4);">
    
    <!-- 返回按钮 -->
    <HBox alignment="TOP_LEFT" spacing="16" style="-fx-padding: 0 0 0 0;">
        <Button text="返回" onAction="#handleBack"
                style="-fx-font-size: 16px; -fx-background-radius: 8; -fx-padding: 4 18; -fx-background-color: #b0b8c1; -fx-text-fill: #2d3a4a;"/>
    </HBox>

    <!-- 标题 -->
    <Label text="商品列表"
           style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2d3a4a; -fx-padding: 0 0 16 0;"/>

    <!-- 搜索和排序区域 -->
    <HBox spacing="16" alignment="CENTER_LEFT" style="-fx-padding: 0 0 12 0;">
        <Label text="搜索：" style="-fx-font-size: 16px; -fx-text-fill: #2d3a4a;"/>
        <TextField fx:id="searchField" promptText="关键字" 
                   style="-fx-font-size: 16px; -fx-pref-width: 200; -fx-background-radius: 8; -fx-padding: 6;"/>
        <Button text="搜索" onAction="#handleSearch"
                style="-fx-font-size: 16px; -fx-background-radius: 8; -fx-padding: 6 18; -fx-background-color: #4f8cff; -fx-text-fill: white;"/>
        
        <Label text="排序：" style="-fx-font-size: 16px; -fx-text-fill: #2d3a4a; -fx-padding: 0 0 0 32;"/>
        <ChoiceBox fx:id="sortChoiceBox" prefWidth="150"
                   style="-fx-font-size: 16px; -fx-background-radius: 8;"/>
    </HBox>

    <!-- 商品表格 -->
    <TableView fx:id="productTable" prefHeight="400" prefWidth="800" style="-fx-font-size: 15px;"
               onMouseClicked="#handleTableClick">
        <columns>
            <TableColumn fx:id="idCol" text="商品ID" prefWidth="120"/>
            <TableColumn fx:id="nameCol" text="商品名称" prefWidth="200"/>
            <TableColumn fx:id="priceCol" text="价格" prefWidth="100"/>
            <TableColumn fx:id="stockCol" text="库存" prefWidth="80"/>
            <TableColumn fx:id="typeCol" text="类型" prefWidth="120"/>
            <TableColumn fx:id="statusCol" text="状态" prefWidth="80"/>
            <TableColumn fx:id="actionCol" text="操作" prefWidth="100"/>
        </columns>
    </TableView>

    <!-- 分页控制区域 -->
    <HBox spacing="16" alignment="CENTER" style="-fx-padding: 12 0 0 0;">
        <Button fx:id="prevButton" text="上一页" onAction="#handlePrevPage" disable="true"
                style="-fx-font-size: 16px; -fx-background-radius: 8; -fx-padding: 6 18; -fx-background-color: #b0b8c1; -fx-text-fill: #2d3a4a;"/>
        
        <Label fx:id="pageInfoLabel" text="第 1 页，共 1 页 (总计 0 条)"
               style="-fx-font-size: 16px; -fx-text-fill: #2d3a4a;"/>
        
        <Button fx:id="nextButton" text="下一页" onAction="#handleNextPage" disable="true"
                style="-fx-font-size: 16px; -fx-background-radius: 8; -fx-padding: 6 18; -fx-background-color: #b0b8c1; -fx-text-fill: #2d3a4a;"/>
    </HBox>

    <!-- 状态消息 -->
    <Label fx:id="msgLabel" textFill="red" style="-fx-font-size: 14px; -fx-padding: 8 0 0 0;"/>

</VBox>
